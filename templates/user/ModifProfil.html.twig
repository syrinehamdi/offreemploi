
{% extends "base.html.twig" %}

{% block body %}
{% if app.user %}



<br />

  <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h1 class="mb-5">
Modification de mes informations  </h1>
  </div>

  <br />

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        {% for message in app.flashes('_message') %}
          <div class="alert alert-success">
            {{ message }}
          </div>
        {% endfor %}
        <div>
          {{ form_start(FormModif) }}

          {{ form_label(FormModif.nom) }}
          <div class="text-danger">
            {{ form_errors(FormModif.nom) }}
          </div>
          {{ form_widget(FormModif.nom) }}





          {{ form_label(FormModif.prenom) }}
          <div class="text-danger">
            {{ form_errors(FormModif.prenom) }}
          </div>
          {{ form_widget(FormModif.prenom) }}


          {{ form_label(FormModif.email) }}
          <div class="text-danger">
            {{ form_errors(FormModif.email) }}
          </div>
          {{ form_widget(FormModif.email) }}


           {{ form_label(FormModif.password) }}
          <div class="text-danger">
            {{ form_errors(FormModif.password) }}
          </div>
          {{ form_widget(FormModif.password) }}


            <div class="fs-14 text-black fw-medium mb-0">
            {{ form_label(FormModif.telephone) }}
            </div>
            <div class="text-danger">
              {{ form_errors(FormModif.telephone) }}
            </div><div>
            {{ form_widget(FormModif.telephone) }}</div>
          


         
          <br /><br />
          <div class="row justify-content-between">
            <div class="col-4"></div>
            <div class="col-4">
              {{form_widget(FormModif.save)}}
            </div>
          </div>

          {{ form_end(FormModif) }}
        </div><br>
      </div>
    </div>
  </div>

<br><br><br><br>














































                        {% endif %}
{% endblock %}