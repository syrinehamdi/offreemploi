{% extends "base.html.twig" %}

{% block body %}
<br><br>
<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
              
                <h1 class="mb-5">Connexion </h1>
            </div> 


<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
              

                {% for message in app.flashes('_message') %}
          <div class="alert alert-success">
            {{ message }}
          </div>
        {% endfor %}
               

              
            </div> 



                <div class=" wow fadeInUp" data-wow-delay="0.5s">
                    <form action="{{ url("login") }}" method="post">
                        <div class="row g-3 d-flex  align-content-center flex-column justify-content-center  " >
                            {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                            

<div class="col-6 align-content-center">
                                <div class="form-floating">
                                    <input type="email" name="_username" class="form-control" id="email" placeholder="Adresse email" value="{{ username }}">
                                    <label class="fs-14 text-black fw-medium lh-18">Adresse email</label>
                                </div>
                            </div>


                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="password" name="_password" class="form-control" id="password" placeholder="Mot de passe">
                                    <label class="fs-14 text-black fw-medium lh-18">Mot de passe</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-primary w-100 py-3" type="submit">Se connecter</button>
                            </div>
                        </div>
                    </form>
                    </div><br>
        <p class="text-black text-center fs-15">Cr√©er un compte ? <a href="{{ url('register') }}" class="text-color hover-underline">Inscription</a></p>
      </div>
                </div>


{% endblock %}