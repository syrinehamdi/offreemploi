{% extends "base.html.twig" %}


{% block title %}
Détail annonce
{% endblock %}

{% block body %}



<!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3"></h6>
                <h1 class="mb-5">Détail du poste : {{annonce.poste}}</h1>
            </div>
            <div class="row g-4">
                <div class="col-8   offset-md-2 align-items-center justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                    <h5 class="text-center ">Entreprise : {{annonce.Entreprise}} </h5>
                    <p class="mb-4 text-center">{{annonce.description}}.</p>



<div class="row">
<div class="col-6 border p-2 ">
                    <div class="d-flex align-items-center mb-3 ">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-map-marker-alt text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Adresse</h5>
                            <p class="mb-0">{{annonce.adresse}}</p>
                        </div>
                    </div>


                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-phone-alt text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Téléphone</h5>
                            <p class="mb-0">{{annonce.user.telephone}}</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-envelope-open text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Adresse email</h5>
                            <p class="mb-0">{{annonce.user.email}}</p>
                        </div>
                    </div>

 </div>
 <div class="col-6 border p-2">

                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-file-contract text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Type de contrat </h5>
                            <p class="mb-0">{{annonce.typeContrat}}</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-dollar-sign text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Salaire</h5>
                            <p class="mb-0">{{annonce.salaire}} Dt</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                            <i class="fa fa-calendar text-white"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="text-primary">Date de l'ajout</h5>
                            <p class="mb-0">{{ annonce.dateAjout | date("m-d-Y")   }}, {{annonce.dateAjout | ago(locale="fr")}}</p>
                        </div>
                    </div>
</div>
</div>


                </div>
                
                
            </div>
{% if app.user.type=="Candidat" %}


    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    
                    <a class="btn btn-primary rounded-pill py-3 px-5" href="{{ path ("createContact", {"id": annonce.id}) }}">Contacter</a>
                </div>
            </div>
        </div>
    </div>


{% endif %}

        </div>
    </div>
    <!-- Contact End -->




























































{% endblock %}
