{% extends 'base.html.twig' %}

{% block body %}
  <br />

  <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h1 class="mb-5">
      Ajouter une annonce
    </h1>
  </div>

  <br />

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        {% for message in app.flashes('_message') %}
          <div class="alert alert-success">
            {{ message }}
          </div>
        {% endfor %}
        <div>
          {{ form_start(formAnnonce) }}

          {{ form_label(formAnnonce.poste) }}
          <div class="text-danger">
            {{ form_errors(formAnnonce.poste) }}
          </div>
          {{ form_widget(formAnnonce.poste) }}


          {{ form_label(formAnnonce.entreprise) }}
          <div class="text-danger">
            {{ form_errors(formAnnonce.entreprise) }}
          </div>
          {{ form_widget(formAnnonce.entreprise) }}


          {{ form_label(formAnnonce.description) }}
          <div class="text-danger">
            {{ form_errors(formAnnonce.description) }}
          </div>
          {{ form_widget(formAnnonce.description) }}


          {{ form_label(formAnnonce.adresse) }}
          <div class="text-danger">
            {{ form_errors(formAnnonce.adresse) }}
          </div>
          {{ form_widget(formAnnonce.adresse) }}


          <div class="fs-14 text-black fw-medium mb-0">
            {{ form_label(formAnnonce.typeContrat) }}
            </div>
            <div class="text-danger">
              {{ form_errors(formAnnonce.typeContrat) }}
            </div><div>
            {{ form_widget(formAnnonce.typeContrat) }}</div>
          

          {{ form_label(formAnnonce.salaire) }}

          <div class="text-danger">
            {{ form_errors(formAnnonce.salaire) }}
          </div>
          {{ form_widget(formAnnonce.salaire) }}

          <br /><br />
          <div class="row justify-content-between">
            <div class="col-4"></div>
            <div class="col-4">
              {{form_widget(formAnnonce.save,{label: labelSubmit})}}
            </div>
          </div>

          {{ form_end(formAnnonce) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
