                        </div>
                        
                        <div class="d-flex border-top">
                              <a href="{{ url ("detailAnnonce", {"slug": stage.poste | slug("-") | lower, "id": stage.id}) }}" class="flex-fill text-center border-end py-2">DÃ©tail</a>

                        </div>
                        </div>
                          
                        
                       {% endfor %}
                    </div>
                       
                        
                    </div>
                  
                </div>
      

            </div>
        </div>
    </div>
<!-- Courses End -->


{% endblock %}







































































